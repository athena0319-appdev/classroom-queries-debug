<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Department #<%= @the_department.id%> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/departments">
          Go back
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_department.name %>
      </dd>

      <dt>
        Number of courses
      </dt>
      
  <dd>
  <% d_id = @the_department.id %>
  <% matching_courses = Course.where({ :department_id => d_id }) %>
  
  <%= matching_courses.count %>
</dd>

    </dl>
  </div>
</div>

<hr>

<h2>Courses</h2>
<ul>
  <% matching_courses.each do |course| %>
    <li>
      <a href="/courses/<%= course.id %>"><%= course.title %></a>
    </li>
 <% end %>
</ul>
